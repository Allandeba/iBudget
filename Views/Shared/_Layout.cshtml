@{
    Layout = "_LayoutBase";
}

@section Header
{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm   border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">iBudget</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Person" asp-action="Index">Pessoas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Item" asp-action="Index">Itens</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Proposal" asp-action="Index">Orçamentos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Catalog" asp-action="Index">Catalogo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Company" asp-action="Manipulate">Empresa</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
}


<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


@section Footer
{
    <footer class="border-top footer ">
        <div class="container">
            &copy; 2023 - iBudget<a asp-area="" asp-controller="Home" asp-action="Index"></a>
        </div>
    </footer>
}

@RenderSection("scripts", required: false)