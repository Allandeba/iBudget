@model RegisterHeaderItem

<section class="text-center">
    <div class="container">
        <div class="py-lg-2">
            <h1>@Model.Title</h1>
            <p class="lead text-muted">@Model.Description</p>
        </div>

        <div class="row justify-content-md-end">
            <div class="col-lg-6 col-md-8 mt-4 mt-md-0">
                <button class="btn btn-primary" onclick="location.href='@Url.Action(Model.Action)'">Novo</button>
            </div>
        </div>
    </div>
</section>