@model ItemModel

@{
    ViewData["Title"] = "Create";
}

@section Scripts
{
    <script src="@Url.Content("~/js/uploadImageUtils.js")"></script>
    <script src="@Url.Content("~/js/submitHelper.js")"></script>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            @using (Html.BeginForm("Create", "Item", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data" }))
            {
                <div class="mb-3 text-start">
                    <label asp-for="ItemName" class="form-label"></label>
                    <input asp-for="ItemName" class="form-control" placeholder="">
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Value" class="form-label"></label>
                    <input asp-for="Value" class="form-control" placeholder="" type="number" step="0.01">
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder=""></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="DefaultImage" class="form-label"></label>
                    <select asp-for="DefaultImage" class="form-select" id="defaultImageSelect">
                        <option value="@(SelectDefault.None)">@(SelectDefault.None.ToString())</option>
                    </select>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="ImageFiles" class="form-label"></label>
                    <input id="upload" asp-for="ImageFiles" accept="image/*" placeholder="">
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>
                </div>

                <div class="row g-3" id="images__client"></div>

                <hr class="my-4">

                <div id="submit" class="text-end mb-4">
                    <button class="btn btn-primary btn-lg" type="submit">Save</button>
                    <a class="btn btn-secondary btn-lg" asp-action="index">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>