@model ItemModel

@using iBudget.Framework

<div class="mb-3 text-start">
    @Html.LabelFor(model => model.ItemName, new { @class = "form-label"} )
    @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control", placeholder = ""} } )
    @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" } )
</div>

<div class="mb-3 text-start">
    @Html.LabelFor(model => model.Value, new { @class = "form-label"} )
    @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", placeholder = "", type = "number", step = "0.01" } } )
    @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" } )
</div>

<div class="mb-3 text-start">
    @Html.LabelFor(model => model.Description, new { @class = "form-label"} )
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = ""} )
    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" } )
</div>