@model LoginModel

@using iBudget.Framework

@{
    ViewData["Title"] = "Cadastro de usuário";
}

@section Scripts
{
    <script src="@Url.Content("~/js/submitHelper.js")"></script>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4">

            @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "needs-validation" }))
            {
                <object class="svg svg-person mb-4" width="72" height="72" alt="Person"></object>
                <h1 class="h3 mb-3 font-weight-normal">Criar um novo usuário</h1>

                <div class="mb-3 text-start">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="" autofocus="">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div id="submit" class="text-end mb-4">
                    <button class="btn btn-primary btn-lg" type="submit">Criar</button>
                </div>
            }
        </div>
    </div>
</div>